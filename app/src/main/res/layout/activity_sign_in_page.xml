<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SIgnInPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/cyworld1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailID"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="   이메일 아이디"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="false"
        android:singleLine="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/pw"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="   비밀번호"
        android:inputType="textPassword"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailID" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#f3701e"
        android:drawableLeft="@drawable/girl_size"
        android:text="회원가입"
        app:iconPadding="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInBtn" />

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#f3701e"
        android:drawableLeft="@drawable/man1_size"

        android:text="로그인"
        android:textColorHighlight="#FF9800"
        android:textColorLink="#FF9800"
        app:iconPadding="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw" />


</androidx.constraintlayout.widget.ConstraintLayout>